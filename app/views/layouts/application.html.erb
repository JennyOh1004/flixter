<!DOCTYPE html>
<html>
  <head>
    <title>Flixter Yoga</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'Flixter Yoga', root_url, class: 'navbar-brand' %>
 

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
          </li>

        </ul>

      <ul class="navbar-nav">
       <% if user_signed_in? %>
       <li class="nav-item">
         <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
       </li>

        <li class="nav-item">
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>

      </div>
    </nav>

  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %> 
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %> 

    <%= yield %>
  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <h3 class="h3_yoga">Instructors</h3>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
          </div>
         <div class="col-12 col-sm-3">
          <h3 class="h3_yoga">About</h3>
          <br />
          <%= link_to 'Team', '#' %>
          <br />
          <%= link_to 'Careers', '#' %>
          <br />
          <%= link_to 'Privacy Policy', privacy_path %>
        </div>
        <div class="col-12 col-sm-3">
          <h3 class="h3_yoga">Contact</h3>
          <br />
          078 5491 7723
          <br />
          69  Crown Street
          <br />
          London, 1004
        </div>
        <div class="col-12 col-sm-3 social">
        <h3 class="h3_yoga">Social</h3>
        <br />
         <%= link_to 'https://github.com/JennyOh1004' do %>
          <ion-icon name="logo-github"></ion-icon>
         <%end%>
         <%= link_to 'http://www.instagram.com' do %>
          <ion-icon name="logo-instagram"></ion-icon>
         <%end%>
         <%= link_to 'https://twitter.com' do %>
          <ion-icon name="logo-twitter"></ion-icon>
         <%end%>
      </div>
      </div>
    </div>
  </div> 

    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
  </body>
</html>
