<div class="booyah-box col-10 offset-1">
  <h1 class="learning__title"> <ion-icon name="book-outline"></ion-icon> What I'm Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    
    <h3 class="text-center">
      <%= link_to course.title, course_path(course), class: 'course_title' %>
    </h3>
    <br />
    <%= image_tag course.image.to_s, class: 'course_image' %>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
      <div class="course_desc">
        <%= course.description %>
        </div>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More Info", course_path(course), class: 'course_btn' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clr" />
  <% end %>


